<Button>
    font_size:32
    background_normal: ''
    background_color: (0,0,1,1)

<TextInput>
    background_color: (150/255, 150/255, 150/255, 1)


<MyLayout>
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size: root.width, root.height
        orientation: "vertical"

        padding: 10
        spacing: 10

        Label:
            text: "Name : "
            canvas.before:
                Color:
                    rgba:self.background_color
                Rectangle:
                    size: self.size
                    pos:self.pos
            background_color: (0,0,1,1)

            #text property
            color: (1,0,0,1)
            bold: True
            italic: True
            outline_color: (0,0,0)
            outline_width: 2

        TextInput:
            multiline: False

        Label:
            text: "Favorite food : "
        TextInput:
            multiline: False

        Button:
            text: "Submit"

        Button:
            text: "Clear"
            background_color: (1, 0, 0, 1)