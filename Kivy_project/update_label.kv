<MyLayout>
    padding:50
    spacing:10

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding:50
        spacing:10

        Label:
            id: name_label
            text: "What is your name"
            font_size: 32

        TextInput:
            id: name_input
            multiline: False
            size_hint: (1, .5)

        Button:
            size_hint: (.4, .3)
            font_size: 24
            pos_hint:{"center_x":.5, "center_y":.5}
            text: "Submit"
            on_press: root.update_label()