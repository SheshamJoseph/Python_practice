<Button>
    font_size: 32
    size_hint: (0.3, 0.3)

<MyLayout>

    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Top Left"
            # {'x','y','top','bottom','left','right'}
            pos_hint: {"x":0, "top":1}

        Button:
            text: "Top Right"
            #pos_hint: {"right":1, "top":1}
            pos_hint: {"x":.7, "top":1}

        Button:
            text: "Bottom Left"
            #pos_hint: {"bottom":1, "left":1}
            pos_hint: {"x":0}

        Button:
            text: "Bottom Right"
            pos_hint: {"bottom":1, "right":1}
            

        Button:
            text: "Center"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

