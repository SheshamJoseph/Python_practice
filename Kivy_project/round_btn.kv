<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Button:
            text: "Enter"

        RoundedButton:
            text: "Enter"
            pos_hint: {"center_x":0.5}
            size_hint: (1, .3)
            #background_color: (.1,.1,1,1)
            #background_normal: ""

#Inheritance
<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ""
    canvas.before:
        Color:
            rgba: (.1,.1,1,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [60]